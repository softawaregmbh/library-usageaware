<Window x:Class="softaware.UsageAware.UI.DemoClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:softaware.UsageAware.UI.DemoClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Margin" Value="30" />
        </Style>
    </Window.Resources>
    <Grid>

        <StackPanel Orientation="Vertical">

            <Button Content="Track person created" 
                    Command="{Binding TrackPersonCreatedCommand}" />

            <Button Content="Track person changed" 
                    Command="{Binding TrackPersonChangedCommand}" />

        </StackPanel>
        
    </Grid>
</Window>
